<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewFriendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friend Name" />

        <EditText
            android:id="@+id/editTextFriendName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit Name"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewFriendDOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friend DOB" />

        <EditText
            android:id="@+id/editTextFriendDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit DOB"
            android:visibility="gone" />

        <Button
            android:id="@+id/editFriendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Friend" />

        <Button
            android:id="@+id/updateFriendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:visibility="gone" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
